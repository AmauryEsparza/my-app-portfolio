<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    >

    <TextView android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="32sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView" />

    <Button
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="SPOTIFY STREAMER"
        android:backgroundTint="@color/udacious_color"
        android:id="@+id/buttonSpotifyStreamer"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp" />

    <Button
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="SCORES APP"
        android:backgroundTint="@color/udacious_color"
        android:id="@+id/buttonScoresApp"
        android:layout_below="@+id/buttonSpotifyStreamer"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="LIBRARY APP"
        android:backgroundTint="@color/udacious_color"
        android:id="@+id/buttonLibraryApp"
        android:layout_below="@+id/buttonScoresApp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:backgroundTint="@color/udacious_color"
        android:id="@+id/buttonBuiltBigger"
        android:layout_below="@+id/buttonLibraryApp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="XYZ READER"
        android:backgroundTint="@color/udacious_color"
        android:id="@+id/buttonXYZReader"
        android:layout_below="@+id/buttonBuiltBigger"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="CAPSTONE: MY OWN APP"
        android:backgroundTint="@color/capstone_color"
        android:id="@+id/buttonCapstone"
        android:layout_below="@+id/buttonXYZReader"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
